{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2021", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./playwright",
    "paths": {
      "@pages/*": ["pages/*"],
      "@support/*": ["support/*"],
      "@builder/*": ["support/builder/*"],
      "@fixtures/*": ["fixtures/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": ["playwright/**/*.ts"],
  "exclude": ["node_modules"]
} 